datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

model User {
  id              Int              @id @default(autoincrement())
  nome            String
  email           String           @unique
  password        String
  role            Role             @default(USER)
  createdAt       DateTime         @default(now())
  transferencias  Transferencia[]
  abastecimentos  Abastecimento[]  @relation("UserAbastecimentos")
}

model Tanque {
  id                    Int                @id @default(autoincrement())
  nome                  String
  tipo                  String
  capacidade            Float
  volumeAtual           Float              @default(0)
  transferenciasOrigem  Transferencia[]    @relation("origem")
  transferenciasDestino Transferencia[]    @relation("destino")
  abastecimentos        Abastecimento[]    // relação inversa
}

model Transferencia {
  id         Int       @id @default(autoincrement())
  origemId   Int
  destinoId  Int
  quantidade Float
  data       DateTime  @default(now())
  userId     Int
  consumo    Float?    // opcional

  origem     Tanque    @relation("origem", fields: [origemId], references: [id])
  destino    Tanque    @relation("destino", fields: [destinoId], references: [id])
  usuario    User      @relation(fields: [userId], references: [id])
}

model Abastecimento {
  id         Int      @id @default(autoincrement())
  tanqueId   Int
  quantidade Float
  data       DateTime @default(now())
  userId     Int
  notaFiscal  String?  // <- opcional

  tanque     Tanque   @relation(fields: [tanqueId], references: [id])
  usuario    User     @relation("UserAbastecimentos", fields: [userId], references: [id])
}
